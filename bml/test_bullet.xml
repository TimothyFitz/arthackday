<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
    <!-- Bullets -->
    <bullet label="main">
        <action>
            <repeat>
                <times>9999</times>
                <action>
                    <wait>1</wait>
                    <fire>
                        <direction type="sequence">13</direction>
                        <bullet/>
                    </fire>
                </action>
            </repeat>
        </action>
    </bullet>

    <action label="main">
        <repeat>
            <times>2 + $rank*1.5</times>
            <action>
                <fire>
                    <bulletRef label="main"/>
                </fire>
                <wait>45</wait>
            </action>
        </repeat>
        <wait>60</wait>
    </action>
    
    <bullet label="sweeper">
        <speed>10</speed>
        <action>
            <wait>5</wait>
            <fire>
                <bullet/>
            </fire>
            <vanish/>
        </action>
    </bullet>
    
    <action label="sweep">
        <fire>
            <direction type="sequence">$1</direction>
            <bulletRef label="sweeper"/>
        </fire>
        <wait>5</wait>
    </action>
    
    <action label="scratch">
        <fire>
            <direction type="absolute">$1</direction>
            <bullet>
                <action>
                    <vanish/>
                </action>
            </bullet>
        </fire>
        <repeat>
            <times>9</times>
            <actionRef label="sweep">
                <param>-10</param>
            </actionRef>
        </repeat>
        <repeat>
            <times>9</times>
            <actionRef label="sweep">
                <param>10</param>
            </actionRef>
        </repeat>
    </action>
    
    <!-- Begin -->
    <action label="top">
        <actionRef label="scratch">
            <param>225</param>
        </actionRef>
    </action>
</bulletml>