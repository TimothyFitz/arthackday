<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml type="horizontal" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
    
    <fire label="single_bullet">
        <direction type="absolute">90</direction>
        <speed>5</speed>
        <bullet>
            <action>
                <changeDirection>
                    <direction type="absolute">$1</direction>
                    <term>20</term>
                </changeDirection>
                <wait>20</wait>
                <changeDirection>
                    <direction type="aim">0</direction>
                    <term>20</term>
                </changeDirection>
                <changeSpeed>
                    <speed>1</speed>
                    <term>20</term>
                </changeSpeed>
                <wait>20</wait>
                <changeSpeed>
                    <speed>10</speed>
                    <term>40</term>
                </changeSpeed>
            </action>
        </bullet>
    </fire>
    
    <action label="homing_beam">
        <repeat>
            <times>10</times>
            <action>
                <fireRef label="single_bullet">
                    <param>180</param>
                </fireRef>
                <wait>0</wait>
            </action>
        </repeat>
    </action>
    
    <action label="homing_beam_lower">
        <actionRef label="homing_beam">
            <param>180</param>
        </actionRef>
    </action>
    
    <action label="homing_beam_lower">
        <actionRef label="homing_beam">
            <param>0</param>
        </actionRef>
    </action>
        
    
    <!-- Begin in this action -->
    <action label="top">
        <repeat>
            <times>20</times>
            <action>
                <actionRef label="homing_beam"/>
                <wait>30</wait>
            </action>
        </repeat>
    </action>
</bulletml>