<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml type="horizontal" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">
    
    <fire label="spawn_bullets">
        <tag>texture=bullet_default</tag>
        <tag>radius=3.5</tag>
        <direction type="sequence">20</direction>
        <speed>2</speed>
        <bullet/>
    </fire>
    
    <fire label="single_bullet">
        <offset type="absolute">
            <x>65</x>
            <y>$3</y>
        </offset>
        <tag>texture=bullet_default</tag>
        <tag>radius=3.5</tag>
        <direction type="absolute">90</direction>
        <speed>5</speed>
        <bullet>
            <action>
                <changeDirection>
                    <direction type="absolute">$1</direction>
                    <term>20</term>
                </changeDirection>
                <wait>20</wait>
                <changeDirection>
                    <direction type="absolute">$2</direction>
                    <term>20</term>
                </changeDirection>
                <changeSpeed>
                    <speed>2</speed>
                    <term>20</term>
                </changeSpeed>
                <wait>20</wait>
                <changeSpeed>
                    <speed>25</speed>
                    <term>60</term>
                </changeSpeed>
                <wait>60</wait>
                <repeat>
                    <times>9</times>
                    <action>
                        <fireRef label="spawn_bullets"/>
                    </action>
                </repeat>
            </action>
        </bullet>
    </fire>
    
    <action label="homing_beam">
        <repeat>
            <times>10</times>
            <action>
                <fireRef label="single_bullet">
                    <param>$1</param>
                    <param>$2 + $3*5</param>
                    <param>$4</param>
                </fireRef>
                <wait>0</wait>
            </action>
        </repeat>
    </action>

    <action label="homing_beam_upper">
        <actionRef label="homing_beam">
            <param>0</param>
            <param>255</param>
            <param>$rand</param>
            <param>40</param>
        </actionRef>
    </action>
    
    <action label="homing_beam_lower">
        <actionRef label="homing_beam">
            <param>180</param>
            <param>270</param>
            <param>$rand</param>
            <param>-40</param>
        </actionRef>
    </action>
        
    
    <!-- Begin in this action -->
    <action label="top">
        <repeat>
            <times>1</times>
            <action>
                <actionRef label="homing_beam_lower"/>
                <actionRef label="homing_beam_upper"/>
                <wait>30</wait>
            </action>
        </repeat>
    </action>
</bulletml>