<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">
<bulletml type="horizontal" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

    <action label="gravity">
        <changeDirection>
            <direction type="absolute">180</direction>
            <term>150 + $rand*50</term>
        </changeDirection>
    </action>
    
    <action label="throw">
        <fire>
            <tag>texture=bullets/12px-green-round</tag>
            <direction type="aim">15 + $rand*60</direction>
            <speed>1</speed>
            <bullet>
                <action>
                    <actionRef label="gravity"/>
                </action>
            </bullet>
        </fire>
        <wait>2</wait>
    </action>

    <!-- Begin -->
    <action label="top">
        <repeat>
            <times>999</times>
            <actionRef label="throw"/>
        </repeat>
    </action>
</bulletml>